<?xml version="1.0" encoding="UTF-8"?>
<layout>
  <font name="status-font"
        file="fonts/Vera.ttf"
        dropShadow="true"
        size="20" />

  <!-- Status area -->
  <label text="Speed"
         name="speed_label"
         font="status-font"
         x="10" y="10" />
  <throttleMeter font="status-font"
                 name="throttle_meter"
                 x="10" y="35"/>
  <label text="Brake on"
         name="brake_label"
         font="status-font"
         x="10" y="60"
         colour="255 0 0"/>
  <label text="Reverse"
         name="reverse_label"
         font="status-font"
         x="10" y="85"
         visible="false"
         colour="255 0 0"/>

  <!-- Station loading/unloading window -->
  <window width="300" height="200" border="5" visible="false"
          name="station">
    <label name="name" text="" x="0" y="0" />
  </window>
</layout>
